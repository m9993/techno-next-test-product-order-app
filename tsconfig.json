{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@api": ["./src/api"],
      "@assets": ["./src/assets"],
      "@components": ["./src/components"],
      "@config": ["./src/config"],
      "@languages": ["./src/languages"],
      "@navigation": ["./src/navigation"],
      "@react-query": ["./src/react-query"],
      "@screens": ["./src/screens"],
      "@services": ["./src/services"],
      "@store": ["./src/store"],
      "@theme": ["./src/theme"],
      "@utils": ["./src/utils"],
    },
  },
  "exclude": [
    "./node_modules",
    "./babel.config.js",
    "./metro.config.js",
    "./.prettierrc.js",
    "./.eslintrc.js",
  ],
}
